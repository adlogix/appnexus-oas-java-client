<AdXML>
  <Request type="Advertiser">
    <Database action="add">
      <Advertiser>
        <Id>$advertiserId$</Id>
        <Organization>$advertiserName$</Organization>
        <BillingInformation>
          <Method>
            <Code>$advertiserBillingInfoMethod$</Code>
          </Method>
          <Country>
            <Code>$advertiserBillingInfoCountry$</Code>
          </Country>
        </BillingInformation>
        <InternalQuickReport>short</InternalQuickReport>
        <ExternalQuickReport>to-date</ExternalQuickReport>
      </Advertiser>
    </Database>
  </Request>
</AdXML>